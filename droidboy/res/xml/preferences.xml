<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

  <com.appboy.sample.UserProfileDialog
      android:title="@string/user_dialog_title"
      android:summary="@string/user_dialog_summary"
      android:positiveButtonText="@string/user_dialog_okay"
      android:negativeButtonText="@string/user_dialog_cancel"/>

  <PreferenceCategory
      android:title="@string/general_preferences_title">

    <ListPreference
        android:key="board.choices"
        android:title="@string/board_choices_title"
        android:summary="@string/board_choices_summary"
        android:entries="@array/boardOptions"
        android:entryValues="@array/boardValues"
        android:defaultValue="@string/default_board_choices"/>

    <ListPreference
        android:key="spinner.duration"
        android:title="@string/spinner_duration_title"
        android:summary="@string/spinner_duration_summary"
        android:entries="@array/spinnerDurationOptions"
        android:entryValues="@array/spinnerDurationValues"
        android:defaultValue="@string/default_spinner_duration"/>

    <ListPreference
        android:key="spin.direction"
        android:title="@string/spin_direction_title"
        android:summary="@string/spin_direction_summary"
        android:entries="@array/spinDirectionOptions"
        android:entryValues="@array/spinDirectionValues"
        android:defaultValue="@string/default_spin_direction"/>

    <ListPreference
        android:key="input.method"
        android:title="@string/input_method_title"
        android:summary="@string/input_method_summary"
        android:entries="@array/inputMethodOptions"
        android:entryValues="@array/inputMethodOptions"
        android:defaultValue="@string/default_input_method"/>
  </PreferenceCategory>

  <PreferenceCategory
    android:title="@string/social_preferences_title">

    <Preference
        android:key="facebook_share"
        android:title="@string/facebook_share_title"
        android:summary="@string/facebook_share_summary"/>

    <Preference
        android:key="twitter_share"
        android:title="@string/twitter_share_title"
        android:summary="@string/twitter_share_summary"/>
  </PreferenceCategory>

  <PreferenceCategory
      android:title="@string/miscellaneous_title">

    <Preference
        android:key="log_purchase"
        android:title="@string/log_purchase_title"
        android:summary="@string/log_purchase_summary"/>
  </PreferenceCategory>

  <PreferenceCategory
      android:title="@string/network_control_title">

    <Preference
        android:key="request_slideup"
        android:title="Request Slideup"/>

    <Preference
        android:key="data_flush"
        android:title="@string/data_flush_title"
        android:summary="@string/data_flush_summary"/>
  </PreferenceCategory>

  <PreferenceCategory
      android:title="@string/about_title">

    <Preference
        android:key="about"/>
  </PreferenceCategory>
</PreferenceScreen>
