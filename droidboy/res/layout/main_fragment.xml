<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/light_gray">
    <EditText
        android:id="@+id/com_appboy_sample_set_user_id_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:hint="Enter UserId here"/>
    <Button
        android:id="@+id/com_appboy_sample_set_user_id_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Set UserId"/>
    <Button
        android:id="@+id/com_appboy_sample_log_custom_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Log Custom Event"/>
    <Button
        android:id="@+id/com_appboy_sample_log_purchase_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Log Purchase"/>
    <Button
        android:id="@+id/com_appboy_sample_submit_feedback_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Submit Feedback"/>
    <Button
        android:id="@+id/com_appboy_sample_set_user_properties_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Set User Properties"/>
    <Button
        android:id="@+id/com_appboy_sample_unset_custom_attributes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Unset Custom User Attributes"/>
    <Button
        android:id="@+id/com_appboy_sample_request_flush_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Request Flush"/>
</LinearLayout>
