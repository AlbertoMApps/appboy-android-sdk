<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_appboy_feedback_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Appboy.Feedback.Layout">
    <LinearLayout
        android:id="@+id/inappmessage_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/Appboy.Feedback.NavigationBar">
        <Button
            android:id="@+id/create_and_add_inappmessage_button"
            android:text="@string/create_and_add_inappmessage"
            style="@style/InAppMessageTesterButton"/>
        <Button
            android:id="@+id/display_next_inappmessage_button"
            android:text="@string/display_next_inappmessage"
            style="@style/InAppMessageTesterButton"/>
        <Button
            android:id="@+id/request_inappmessage_from_server_button"
            android:text="@string/request_inappmessage_from_appboy"
            style="@style/InAppMessageTesterButton"/>
        <Button
            android:id="@+id/hide_current_inappmessage_button"
            android:text="@string/hide_current_inappmessage"
            style="@style/InAppMessageTesterButton"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:layout_above="@id/inappmessage_buttons">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4.0dp"
                android:paddingRight="4.0dp"
                android:stretchColumns="1">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/set_message_type"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/message_type_list_view"
                        android:layout_height="120dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/click_action_set_to"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/click_action_list_view"
                        android:layout_height="120dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/dismiss_type_set_to"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/dismiss_type_list_view"
                        android:layout_height="80dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/uri_set_to"
                        style="@style/InAppMessageTesterTextView"/>
                    <EditText
                        android:id="@+id/uri_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/message_set_to"
                        style="@style/InAppMessageTesterTextView"/>
                    <EditText
                        android:id="@+id/message_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/header_set_to"
                        style="@style/InAppMessageTesterTextView"/>
                    <EditText
                        android:id="@+id/header_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/icon_set_to"
                        style="@style/InAppMessageTesterTextView"/>
                    <EditText
                        android:id="@+id/icon_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/animates_in_from"
                            style="@style/InAppMessageTesterTextView"/>
                        <ListView
                            android:id="@+id/slide_from_list_view"
                            android:layout_height="80dp"
                            style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/uri_duration_seconds"
                        style="@style/InAppMessageTesterTextView"/>
                    <EditText
                        android:id="@+id/duration_seconds_edit_text"
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/set_background_color"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/bg_color_list_view"
                        android:layout_height="160dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/set_icon_color"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/icon_color_list_view"
                        android:layout_height="160dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/set_close_button_color"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/close_btn_color_list_view"
                        android:layout_height="120dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/set_text_color"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/text_color_list_view"
                        android:layout_height="160dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/set_header_text_color"
                        style="@style/InAppMessageTesterTextView"/>
                      <ListView
                          android:id="@+id/header_text_list_view"
                          android:layout_height="160dp"
                          style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/set_icon_or_image"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/icon_list_view"
                        android:layout_height="360dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/add_message_buttons"
                        style="@style/InAppMessageTesterTextView"/>
                    <ListView
                        android:id="@+id/message_buttons_list_view"
                        android:layout_height="120dp"
                        style="@style/InAppMessageTesterListView"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/custom_inappmessage_view_factory_checkbox"
                    android:text="@string/custom_iinappmessage_view_factory"
                    style="@style/InAppMessageTesterCheckBox"/>
                <CheckBox
                    android:id="@+id/custom_inappmessage_manager_listener_checkbox"
                    android:text="@string/custom_iinappmessagemanager_listener"
                    style="@style/InAppMessageTesterCheckBox"/>
                <CheckBox
                    android:id="@+id/custom_appboy_navigator_checkbox"
                    android:text="@string/custom_iappboy_navigator"
                    style="@style/InAppMessageTesterCheckBox"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>