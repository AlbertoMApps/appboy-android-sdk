<?xml version="1.0" encoding="utf-8"?>

<com.appboy.ui.widget.SlideupDrawerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    custom:maxHeight="102.0dp"
    custom:handle="@+id/com_appboy_slideup_drawer_handle"
    custom:content="@+id/com_appboy_slideup_drawer_content">

  <View
      android:id="@id/com_appboy_slideup_drawer_handle"
      android:layout_width="0.0dp"
      android:layout_height="0.0dp"/>

  <LinearLayout
      android:id="@id/com_appboy_slideup_drawer_content"
      android:layout_width="match_parent"
      android:layout_height="102.0dp"
      android:orientation="vertical"
      android:clickable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="2.0dp"
        style="@style/Appboy.Slideup.TopShadow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100.0dp"
        style="@style/Appboy.Slideup.Drawer">

      <Button
          android:id="@+id/com_appboy_slideup_drawer_arrow"
          android:layout_width="wrap_content"
          android:layout_height="70.0dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          style="@style/Appboy.Slideup.DrawerArrow"/>

      <TextView
          android:id="@+id/com_appboy_slideup_drawer_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_toLeftOf="@id/com_appboy_slideup_drawer_arrow"
          style="@style/Appboy.Slideup.DrawerMessage"/>
    </RelativeLayout>
  </LinearLayout>
</com.appboy.ui.widget.SlideupDrawerView>